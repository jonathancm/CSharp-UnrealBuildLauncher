<UserControl x:Class="UnrealBuildLauncher.BuildConfigEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UnrealBuildLauncher"
             mc:Ignorable="d" 
             
             Margin="0,4,0,4"
             d:DesignHeight="200" d:DesignWidth="800" Background="#FF151515">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="8"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="8"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="TextConfigName" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" Text="Build Config Name" Padding="0,0,8,0"/>
        <Button Grid.Column="3" Grid.Row="1" VerticalAlignment="Center" Padding="4" Click="OnLaunchButtonClicked">
            <TextBlock Text="Launch"/>
        </Button>
    </Grid>
</UserControl>
